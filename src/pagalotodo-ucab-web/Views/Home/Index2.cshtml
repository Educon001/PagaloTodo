@using UCABPagaloTodoWeb.Models.CurrentUser
@{
    ViewData["Title"] = "Pagalo Todo";
}

<div class="text-center">
    @if (CurrentUser.GetUser().UserType == "admin")
    {
        <div>
            ADMINISTRADOR
        </div>
    }
    
    @if (CurrentUser.GetUser().UserType == "consumer")
    {
        <div class="text-center p-3">
            <a asp-controller="Consumer" asp-action="MakePayment" class="btn btn-primary">
                MAKE PAYMENT
            </a>
        </div>
        <div class="text-center p-3">
            <a asp-controller="Consumer" asp-action="GetPayments" asp-route-id="@CurrentUser.GetUser().Id" class="btn btn-primary">
                GET PAYMENTS
            </a>
        </div>
    }
    
    @if (CurrentUser.GetUser().UserType == "provider")
    {
        <div class="text-center p-3">
            <a asp-controller="Provider" asp-action="GetPayments" asp-route-id="@CurrentUser.GetUser().Id" class="btn btn-primary">
                GET PAYMENTS
            </a>
        </div>
    }
</div>