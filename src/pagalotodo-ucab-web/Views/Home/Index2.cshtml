@using UCABPagaloTodoWeb.Models.CurrentUser
@{
    ViewData["Title"] = "Pagalo Todo";
}

@{
    Layout = "_IndexLayout";
}

  <!-- ======= Hero Section ======= -->
  <section id="hero" class="d-flex align-items-center">

    <div class="container">
      <div class="row">
        <div class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">
          <h1>Trust. Pay. Live</h1>
          <h2>We make your life easier by letting you pay the services you enjoy the most</h2>
          <div class="d-flex justify-content-center justify-content-lg-start">
            <a href="#about" class="btn-get-started scrollto" >Get Started</a>
          </div>
        </div>
        <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
          <img src="~/css/assets/img/hero-img.png" class="img-fluid animated" alt="">
        </div>
      </div>
    </div>

  </section><!-- End Hero -->

  <main id="main">

    <!-- ======= Clients Section ======= -->
    <section id="clients" class="clients section-bg">
      <div class="container">

        <div class="row" data-aos="zoom-in">

          <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
            <img src="~/css/assets/img/clients/client-1.png" class="img-fluid" alt="">
          </div>

          <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
            <img src="~/css/assets/img/clients/client-2.png" class="img-fluid" alt="">
          </div>

          <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
            <img src="~/css/assets/img/clients/client-3.png" class="img-fluid" alt="">
          </div>

          <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
            <img src="~/css/assets/img/clients/client-4.png" class="img-fluid" alt="">
          </div>

          <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
            <img src="~/css/assets/img/clients/client-5.png" class="img-fluid" alt="">
          </div>

          <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
            <img src="~/css/assets/img/clients/client-6.png" class="img-fluid" alt="">
          </div>

        </div>

      </div>
    </section><!-- End Cliens Section -->

    <!-- ======= About Us Section ======= -->
  <section id="about" class="about">
    <div class="container" data-aos="fade-up">

      <div class="section-title">
        <h2>About Us</h2>
      </div>

      <div class="row content">
        <div class="col-lg-6">
          <p>
            We are a team of engineers committed to ensuring the security of your payments through our platform.
          </p>
          <ul>
            <li><i class="ri-check-double-line"></i>We also have a team of security experts who work 24/7 to detect and prevent fraud</li>
            <li><i class="ri-check-double-line"></i> We use the latest security technologies to protect your personal and financial information. </li>
            <li><i class="ri-check-double-line"></i>We offer conciliation methods so businesses can verify its payments as quick as possible</li>
          </ul>
        </div>
        <div class="col-lg-6 pt-4 pt-lg-0">
          <p>
            We take the security of your payments very seriously and are committed to providing you with a safe and reliable experience.
          </p>
          <a href="#" class="btn-learn-more">Learn More</a>
        </div>
      </div>

    </div>
  </section>
  
    <!-- ======= Cta Section ======= -->
    <section id="cta" class="cta">
      <div class="container" data-aos="zoom-in">

        <div class="row">
          <div class="col-lg-9 text-center text-lg-start">
            <h3>Make your payments in our platform</h3>
            <p> Live the PagaloTodoUCAB experience</p>
          </div>
          <div class="col-lg-3 cta-btn-container text-center">
            <a class="cta-btn align-middle" href="#">Go</a>
          </div>
        </div>

      </div>
    </section><!-- End Cta Section -->
  </main><!-- End #main -->

  <div id="preloader"></div>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="~/css/assets/vendor/aos/aos.js"></script>
  <script src="~/css/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="~/css/assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="~/css/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="~/css/assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="~/css/assets/vendor/waypoints/noframework.waypoints.js"></script>
