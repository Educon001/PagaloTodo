@using UCABPagaloTodoWeb.Models.CurrentUser
@{
    Layout = "_Layout";
}

@{
    CurrentUser.EmptyUser();
}

<link href="~/css/assets/csshomepage/style.css" rel="stylesheet">
<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <div class="text-center my-5">
                    <h1 class="display-5 fw-bolder text-white mb-2 logo">PagaloTodoUCAB</h1>
                    <p class="lead text-white-50 mb-4"></p>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Features section-->
<section class="py-5 border-bottom" id="features">
    <div class="container px-5 my-5">
        <div class="row gx-5">
            <div class="col-lg-4 mb-5 mb-lg-0">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-collection"></i></div>
                <h2 class="h4 fw-bolder">Admin</h2>
                <p>admin</p>
                <button class="btn">
                    <a asp-controller="Login" asp-action="Admin" class="text-decoration-none">
                        Sign in
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </button>
            </div>
            <div class="col-lg-4 mb-5 mb-lg-0">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-building"></i></div>
                <h2 class="h4 fw-bolder">Provider</h2>
                <p>Do you offer services? </p>
                <button class="btn">
                    <a asp-controller="Login" asp-action="Provider" class="text-decoration-none">
                        Sign in
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </button>
            </div>
            <div class="col-lg-4">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-toggles2"></i></div>
                <h2 class="h4 fw-bolder">Consumer</h2>
                <p>Do you wanna pay a service you use?</p>
                <button class="btn">
                    <a asp-controller="Login" asp-action="Consumer" class="text-decoration-none">
                        Sign in
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </button>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="js/scripts.js"></script>
