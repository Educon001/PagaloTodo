@model LoginRequest

@{
    ViewBag.Title = "Login Provider";
    Layout = "_LayoutPartial";
}

<h2>Login Provider</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Username">Nombre de usuario:</label>
        <input asp-for="Username" class="form-control" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash">Contraseña:</label>
        <input asp-for="PasswordHash" class="form-control" type="password" required />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <input asp-for="UserType" type="hidden" value="provider" />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}