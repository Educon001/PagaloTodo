@model dynamic

@{
    ViewBag.Title = "Recuperación de Contraseña";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-sm-8 col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-white pb-4">
                    <h2 class="text-center font-weight-bold mb-3">Recuperación de Contraseña</h2>
                </div>
                <div class="card-body px-4 py-3">
                    <p class="text-center">Introduce el correo electrónico asociado a tu cuenta y te enviaremos un enlace para restablecer tu contraseña.</p>
                    <form method="post">
                        <div class="form-group">
                            <label for="Email">Correo Electrónico:</label>
                            <input type="email" class="form-control" id="Email" name="Email" required />
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-block rounded-pill py-2 px-4 mt-3">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>