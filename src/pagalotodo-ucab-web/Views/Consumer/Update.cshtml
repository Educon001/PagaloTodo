@using Microsoft.AspNetCore.Mvc.TagHelpers
@using UCABPagaloTodoWeb.Models.CurrentUser
@model ConsumerRequest

@Html.Partial("InnerPageHeader", "Update Consumer")
<section class="inner-page">
<div class="container">
    <form method="post" asp-route="putConsumer" asp-route-id="@ViewBag.Id">
        <div class="mb-3">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" data-val="false">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name">Nombre(s)</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName">Apellidos</label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConsumerId">Cedula</label>
                <input asp-for="ConsumerId" class="form-control">
                <span asp-validation-for="ConsumerId" class="text-danger"></span>
            </div>
            @{
                IEnumerable<SelectListItem> selectList = new List<SelectListItem>(){ 
                    new()
                    {
                        Text = "Activo",
                        Value = "true",
                    },
                    new()
                    {
                        Text = "Inactivo",
                        Value = "false",
                    }
                };
            }
            <div class="mb-3">
                <label asp-for="Status">Estatus</label>
                <select name="Status" id="Status" asp-items="selectList"  class="form-control" asp-for="Status"></select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            @if (CurrentUser.GetUser() != null && CurrentUser.GetUser().UserType == "admin"){
                <a asp-controller="Consumer" asp-action="Index" class="btn btn-secondary">Back</a>
            }
    </form>
</div>
</section>

@section Scripts
{   
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

