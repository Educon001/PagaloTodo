@model UCABPagaloTodoWeb.Controllers.ConsumerController.ServiceIdObject

@{
    List<ServiceModel> services = ViewBag.Message;
    IEnumerable<SelectListItem> selectList = services.Select(p => new SelectListItem
    {
        Text = $"{p.Name}",
        Value = p.Id.ToString()
    });
}
@Html.Partial("InnerPageHeader", "Select Service")
<section class="inner-page">
    <div class="container row justify-content-center">
        <div class="card rounded-lg shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Elija el servicio que desea pagar</h2>
                <form method="post" class="justify-content-center">
                    <div class="mb-3">
                        <select name="Id" id="Id" asp-items="selectList"></select>
                    </div>
                    <button type="submit" class="btn btn-primary">OK</button>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    .card {
        max-width: 500px;
        margin: 0 auto;
        border-radius: 10px;
    }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card-text {
        margin-bottom: 20px;
    }

    .btn-primary {
        width: 100%;
        padding: 12px 0;
        border-radius: 5px;
    }

    .alert {
        margin-top: 20px;
        padding: 10px;
        border-radius: 5px;
    }
    
    .inner-page .card-body .mb-3 {
      display: flex;
      justify-content: center;
    }
    
    #Id {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
    }
</style>



