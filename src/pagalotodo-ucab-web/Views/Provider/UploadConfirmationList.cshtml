@using UCABPagaloTodoWeb.Models.CurrentUser
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ConfirmationList

@Html.Partial("InnerPageHeader", "Upload Confirmation List")
<section class="inner-page">
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card rounded-lg shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Cargar Deudores</h2>

                    <form method="post" asp-route="UploadConfirmationList" asp-route-id="@ViewBag.ServiceId" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="fileInput">Seleccione un archivo CSV:</label>
                            <input type="file" name="file" id="fileInput" accept=".csv" asp-for="File" onchange="enableSubmit()">
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary flex-grow-1 mr-2" disabled id="submitBtn">Subir archivo</button>
                            <button asp-controller="Service" asp-action="Show" asp-route-id="@ViewBag.ServiceId" class="btn btn-secondary">Back</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</section>

@section Scripts {
    <script>
        function enableSubmit() {
            var fileInput = document.getElementById("fileInput");
            var submitBtn = document.getElementById("submitBtn");
            submitBtn.disabled = fileInput.files.length === 0;
        }
    </script>
}



<style>
    .container {
        padding-top: 50px;
    }

    .card {
        max-width: 500px;
        margin: 0 auto;
        border-radius: 10px;
    }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    .btn-primary {
        width: 100%;
        padding: 12px 0;
        border-radius: 5px;
    }

    .alert {
        margin-top: 20px;
        padding: 10px;
        border-radius: 5px;
    }
</style>
