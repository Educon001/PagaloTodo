@model AccountingCloseViewModel

<div class="popup-container">
    <div class="popup-card">
        <h2 class="popup-title">Emisión de Archivos de Conciliación</h2>

        <p class="popup-text">Presione el botón para emitir los archivos de conciliación y mantener sus registros al día.</p>

        <form id="accountingCloseForm" method="post" asp-area="" asp-controller="Admin" asp-action="AccountingClosePost">
            <button class="popup-button" type="submit">Emitir Archivos de Conciliación</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="success-message">@Model.SuccessMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
    </div>
</div>

<style>
    .popup-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
    }

    .popup-card {
        background-color: #fff;
        width: 400px;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    .popup-title {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .popup-text {
        margin-bottom: 20px;
    }

    .popup-button {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .success-message {
        color: green;
        font-weight: bold;
        margin-top: 10px;
    }

    .error-message {
        color: red;
        font-weight: bold;
        margin-top: 10px;
    }
</style>
