@model AccountingCloseViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card rounded-lg shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Emisión de Archivos de Conciliación</h2>

                    <p class="card-text text-center">Presione el botón para emitir los archivos de conciliación y mantener sus registros al día.</p>

                    <form id="accountingCloseForm" method="post" asp-area="" asp-controller="Admin" asp-action="AccountingClosePost">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Emitir Archivos de Conciliación</button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success mt-4">@Model.SuccessMessage</div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-4">@Model.ErrorMessage</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        padding-top: 50px;
    }

    .card {
        max-width: 500px;
        margin: 0 auto;
        border-radius: 10px;
    }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card-text {
        margin-bottom: 20px;
    }

    .btn-primary {
        width: 100%;
        padding: 12px 0;
        border-radius: 5px;
    }

    .alert {
        margin-top: 20px;
        padding: 10px;
        border-radius: 5px;
    }
</style>
